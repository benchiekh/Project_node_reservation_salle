<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Rooms</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Toastify CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center font-weight-bold text-primary">Welcome <span class="text-danger"><%= name %></span> to Gestion des Salles de Réunion</h1>

        <% if (errors.length > 0) { %>
            <div class="alert alert-danger" role="alert">
                <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                <% }) %>
            </div>
        <% } %>
        
        
        <!-- Formulaire d'ajout de salle de réunion -->
        <form id="addRoomForm" action="/room/meetingRooms" method="POST">
            <div class="form-group">
                <label for="roomName">Nom de la salle :</label>
                <input type="text" id="roomName" name="roomName" class="form-control" placeholder="Entrez le nom de la salle">
            </div>
            <div class="form-group">
                <label for="capacity">Capacité :</label>
                <input type="number" id="capacity" name="capacity" class="form-control" placeholder="Entrez la capacité de la salle">
            </div>
            <div class="form-group">
                <label for="equipment">Équipement :</label>
                <input type="text" id="equipment" name="equipment" class="form-control" placeholder="Entrez l'équipement de la salle">
            </div>
            <div class="form-group">
                <label for="availability">Disponibilité :</label>
                <select id="availability" name="availability" class="form-control">
                    <option value="true">Disponible</option>
                </select>
            </div>
            <button type="submit" class="btn btn-danger">Ajouter Salle de Réunion</button>
            <button type="button" class="btn btn-success" onclick="window.location.href = '/salle/salles';">Consulter tous les Salles</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    
</body>
</html>
